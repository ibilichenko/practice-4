{
  "extends": "standard",
  "env": {
    "es2020": true,
    "browser": true,
    "mocha": true,
    "node": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "lines-around-comment": "off",
    "newline-before-return": "error",
    "no-confusing-arrow": "off",
    "no-console": "off",
    "no-debugger": "off",
    "no-undefined": "off",
    "require-jsdoc": "off",
    "semi": "off",
    "space-before-function-paren": "off",
    "brace-style": ["error", "1tbs", { "allowSingleLine": true }],
    "no-trailing-spaces": ["error", { "skipBlankLines": true }]
  }
}